<div id="main">
  <div class="main_catalog_heading main_catalog_heading--first without_lines">
    <div class="container">
      <div class="main_catalog_heading_content">
        <div class="main_catalog_heading_content__icon">
          <%#<img class="lazy" data-src="img/catalog_mark_icon.png" alt="Выберите ваш новый автомобиль LADA в автоцентре Авимоторс" src="img/lazy_placeholder.png">%>
        </div>
        <div class="main_catalog_heading_content__title"><%= @brand.title %></div>
      </div>
    </div>
  </div>
  <div class="main_catalog_count">
    <%#<div class="container">
      <div class="main_catalog_count__data" data-aos="fade-down" data-aos-duration="600" data-aos-delay="300">В наличии: <span>115 авто</span></div>
    </div>%>
  </div>
  <div class="main_catalog">
    <div class="container">
      <div class="row">
        <% if @brand.new_cars.where(hide: 0, archive: 0).present? %>
          <% brand_car_types = NewCar.where(brand_id: @brand.id,hide: 0, archive: 0).distinct.pluck(:car_type) %>
          <% brand_car_types.each do |t| %>
            <%= render partial:'new_cars/new_cars_brand', collection: @brand.new_cars.where(hide: 0, archive: 0, car_type: t).min_price_ordered %>
           <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="car_slider">
    <div class="car_slider__car">
      <div class="car_slider__car__wheel"></div>
      <div class="car_slider__car__wheel"></div>
    </div>
  </div>
  <div class="main_benefit">
    <div class="main_benefit_leftbg">
      <div class="main_benefit_leftbg__image"></div>
    </div>
    <div class="main_benefit_rightbg">
      <div class="main_benefit_rightbg__image"></div>
    </div>
    <div class="main_benefit_content">
      <div class="container">
        <div class="main_benefit_content__title">Выгода</div>
        <div class="main_benefit_content__value">до <span>500 000</span> р.</div>
        <div class="main_benefit_content__subtitle">При покупке автомобиля в кредит</div>

