
<div class="card card--standard">
  <div class="card__inner">
    <div class="card__media card__media--full" data-show-used-ajax="used-car-photos" data-car_id="<%= show_filter_special.id %>">
      <%= image_tag show_filter_special.images[0].card.url,class:'card__img', alt: '' %>
<!--      <span class="card__label">Хит</span>-->
    </div>
    <div class="card__main card__main_new">

      <div class="card__title"><%= show_filter_special.brand.title %>  <%= show_filter_special.name %></div>
      <div class="card__price"><%= number_with_delimiter(show_filter_special.price,delimiter:' ') %> &#8381;</div>
    </div>
    <div>
      <ul class="card__infolist">
        <li class="card__infoitem"><span class="card__infoitem-name">Объём</span><span><%= show_filter_special.volume %> л</span></li>
        <li class="card__infoitem"><span class="card__infoitem-name">Мощность</span><span><%= show_filter_special.power %> л.с</span></li>
        <li class="card__infoitem"><span class="card__infoitem-name">Кпп</span><span><%= show_filter_special.transmission %></span></li>
      </ul>
    </div>
    <div class="card__buttons">
      <button class="card__btn" data-show-used-ajax="used-car-details-modal"  data-car_id="<%= show_filter_special.id %>" type="button">
        <span>Подробнее</span>
        <%= svg_tag 'carso/icons.svg','svg-arrow-fat',7,8,class:'card__link_icon' %>
      </button>
      <button class="button" data-show-used-ajax="used-car-buy-modal" data-car_id="<%= show_filter_special.id %>" type="button">Купить со скидкой</button>
    </div>
  </div>
</div>