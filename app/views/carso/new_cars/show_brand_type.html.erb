<div class="row justify-content-center cr_tr_url">
  <div class="cr_tr_hr right row justify-content-center">
    <%= render partial:'new_cars/small_new_cars', collection: @cars, locals: {:show_brand => true, :credit_flag => false} %>
  </div>
</div>