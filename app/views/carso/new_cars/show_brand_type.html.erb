<%
  case @title
  when 'Внедорожники'
    type_multiply = 'внедорожников'
    type_multiply_ck = 'Внедорожники'
  when 'Хэтчбеки'
    type_multiply = 'хэтчбеков'
    type_multiply_ck = 'Хэтчбеки'
  when 'Лифтбеки'
    type_multiply = 'лифтбеков'
    type_multiply_ck = 'Лифтбеки'
  when 'Универсалы'
    type_multiply = 'Универсалы'
    type_multiply_ck = 'Универсалы'
  when 'Седаны'
    type_multiply = 'седанов'
    type_multiply_ck = 'Седаны'
  when 'Минивэны'
