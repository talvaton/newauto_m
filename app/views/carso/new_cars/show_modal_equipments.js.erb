$.fancybox.open('<%= escape_javascript (render partial:'new_cars/modal_equipments', :object => @car) %>',
    {
        touch: false,
        animationDuration: 500,
        animationEffect: "fade",
        afterLoad: function(){
            $('#car-equipments-modal').css('display', 'inline-block');
        },
        afterShow: function(){
            disableFormBtn();
            DISABLE_FANCYBOX = false;

            var equipments = $(".modal__equipments li");
            if (equipments.length > 7) {
                $(".modal__equipments").slick({
                    lazyLoad: 'ondemand',
                    slidesToShow: 7,
                    slidesToScroll: 1,
                    dots: false,
                    infinite: false,
                    vertical: true,
                    prevArrow: "<button type='button' class='slick-prev'><svg width='11' height='18'><use xlink:href='/assets/carso/icons.svg#svg-arrow-short'></use></svg></button>",
                    nextArrow: "<button type='button' class='slick-next'><svg width='11' height='18'><use xlink:href='/assets/carso/icons.svg#svg-arrow-short'></use></svg></button>",
                })
            }

        }
    }
);
