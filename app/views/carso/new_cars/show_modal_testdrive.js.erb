$.fancybox.open('<%= escape_javascript (render partial:'new_cars/modal_testdrive', :object => @car) %>',
    {
        touch: false,
        animationDuration: 500,
        animationEffect: "fade",
        afterLoad: function(){
            $('#car-testdrive-modal').css('display', 'inline-block');
//            $('.scrollbar-outer').scrollbar();
            init_labels('#car-testdrive-modal .input, #car-testdrive-modal .select');
        },
        afterShow: function(){
            disableFormBtn();
            $('#new_testdrive_modal_new_ticket').enableClientSideValidations();
            init_phone_mask();
            $('#new_testdrive_modal_new_ticket .input, .select').on('focus', function(){
                $(this).removeClass('input--error');
                $(this).siblings('.form__error').slideUp();
            });
            DISABLE_FANCYBOX = false;
        }
    }
);