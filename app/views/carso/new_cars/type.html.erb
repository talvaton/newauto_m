<%
  case @title
    when 'Внедорожники'
      type_multiply = 'внедорожников'
    when 'Хэтчбеки'
      type_multiply = 'хэтчбеков'
    when 'Лифтбеки'
      type_multiply = 'лифтбеков'
    when 'Универсалы'
      type_multiply = 'Универсалы'
    when 'Седаны'
      type_multiply = 'седанов'
    when 'Минивэны'
      type_multiply = 'минивэнов'
    when 'Пикапы'
      type_multiply = 'пикапов'
    when 'Фургоны'
      type_multiply = 'фургонов'
    when 'Купе'
    type_multiply = 'купе'
  end
%>

<% provide :title,"Купить новый #{@name} 🚗 цены и модельный ряд, продажа #{type_multiply} в " + @current_region.sklon3 + '— автосалон «Авимоторс»' %>
<% provide :description,"Новые #{@title} #{(Time.current - 1.year).year.to_s}-#{Time.current.year.to_s} года по выгодным ценам у официального дилера в #{@current_region.sklon3}! Скидки и спецпредложения на все модели #{type_multiply}! — автосалон «Авимоторс»" %>




  <section class="main-brand">
    <section class="main-title-wrap">
      <div class="main-title">
        <div class="main-title-text">
          <%= @title %> от официального дилера
        </div>
      </div>
    </section>
    <div class="row main-brand-item-cont">
      <%= render partial:'new_cars/small_new_cars', collection: @cars.where(hide: 0), locals: {:show_brand => true, :credit_flag => false} %>
    </div>
  </section>