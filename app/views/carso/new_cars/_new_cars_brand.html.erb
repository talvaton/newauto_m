<% if credit_page?
  # m = 60
  # p = 25
  credit = true
 end %>
<% if tradein_page?
  # m = 60
  # p = 25
  tradein = true
 end %>

<% if new_cars_brand.special_options.present? and (new_cars_brand.special_options.include? 'Хит-продаж')
     class_topsale = "card--topsale"
   else
     class_topsale = ""
   end %>

<%
  if (new_cars_brand.discount_count + @region_discount) < new_cars_brand.equipments.where(hide:0).minimum(:price)*4/10
    snc_price = new_cars_brand.equipments.where(hide:0).minimum(:price) - new_cars_brand.discount_count - @region_discount
  else
    #snc_price = new_cars_brand.equipments.where(hide:0).minimum(:price)*6/10
    snc_price = new_cars_brand.equipments.where(hide:0).minimum(:price) - new_cars_brand.discount_count
  end
%>

<div class="card-box <% if new_cars_brand.archive %>card-archive<% end %>">
    <%= link_to ( new_car_path(new_cars_brand.brand.url,new_cars_brand.url)  ) do %>
<div class="card-media">
        <% if new_cars_brand.colors[0].present? %>
          <%= image_tag "/static/images/blank.png", alt: '',data:{:lazy=>new_cars_brand.colors[0].card.url,:original=>new_cars_brand.colors[0].card.url} %>
        <% end %>
      </div>
      <div class="card-main">
        <div class="sale_block_center row justify-content-between">
          <%= render partial:'new_cars/new_cars_content', :remote => true %>
        </div>
        <div class="card-title"><%= new_cars_brand.name %></div>
        <div class="card-price">
          <span <%= credit ? "data-price=#{snc_price}" : '' %>><%= number_with_delimiter((credit ? count_price(snc_price,PERCENT,MONTH):snc_price  ), delimiter: " ") %></span> ₽<% if credit %><span>/мес</span><% end %>
        </div>
      </div>
    <% end %>

  </div>