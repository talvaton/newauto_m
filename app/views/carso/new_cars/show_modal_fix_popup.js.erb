$.fancybox.open('<%= escape_javascript (render partial:'carso/carso/modal_fix_popup') %>',
    {
        touch: false,
        animationDuration: 500,
        animationEffect: "fade",
        afterLoad: function(){
            $('#fix-popup-modal').css('display', 'inline-block');
            init_labels('#fix-popup-modal .input, #fix-popup-modal .select');
        },
        afterShow: function(){
            disableFormBtn();
            $('#new_details_modal_new_ticket').enableClientSideValidations();
            init_phone_mask();
            $('#new_details_modal_new_ticket .input, .select').on('focus', function(){
                $(this).removeClass('input--error');
                $(this).siblings('.form__error').slideUp();
            });
            DISABLE_FANCYBOX = false;
        }
    }
);