<?xml version="1.0"?>
<data>
  <cars>
    <% @newcars.each do |new_car|%>
      <% e = new_car.equipments.where(hide:false).order(:price).first %>
    <car>
      <unique_id><%= new_car.id %></unique_id>
      <mark_id><%= new_car.brand.title %></mark_id>
      <folder_id><%= new_car.name %></folder_id>
      <modification_id><%= "#{e.specification.name} (#{e.specification.power} л.с.)" %></modification_id>
      <body_type><%= new_car.car_type %></body_type>
      <wheel>Левый</wheel>
      <color>Белый</color>
      <availability>В наличии</availability>
      <custom>Растаможен</custom>
      <state>Отличное</state>
      <year>2020</year>
      <price><%= e.price - new_car.discount_count %></price>
      <currency>RUB</currency>
      <url><%= "#{request.base_url}#{new_car_path(new_car.brand.url,new_car.url)}" %></url>
      <images><%= image_url new_car.colors[0].largecard.url %></images>
    </car>
    <% end %>
  </cars>
</data>