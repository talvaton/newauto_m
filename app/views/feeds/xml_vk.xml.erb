<?xml version="1.0" encoding="UTF-8"?>
<yml_catalog date="2021-05-07 22:55">
<shop>
<name>Карсо</name>
<company>Карсо</company>
 <url>https://www.carso.ru</url>
<currencies>
<currency id="RUR" rate="1"/>
</currencies>
        <categories>
             <% @brands.where(hide:false).each do |brand| %>
               <category id="<%= brand.id %>" parentId="10003"><%= brand.title %></category>
             <% end %>
        </categories>
<offers>
         <% @new.where(hide:false).each do |new_car| %>
         <% e = new_car.equipments.where(hide:false).order(:price).first %>
            <offer id="<%= new_car.id %>" available="true">
             <url><%= request.base_url %>/<%= new_car.brand.url %>/<%= new_car.url %></url>
             <price><%= e.price - new_car.discount_count %></price>
             <currencyId>RUR</currencyId>
             <categoryId><%= new_car.brand.id %></categoryId>
                <categoryId><%= new_car.brand.id %></categoryId>
                <picture><% if new_car.colors[0].present? %><%= request.base_url %><%= new_car.colors[0].feed.url %><% end %></picture>
                <name><%= new_car.menutitle %></name>
                <description></description>
                <sales_notes></sales_notes>
            </offer>
         <% end %>
</offers>
</shop>
</yml_catalog>